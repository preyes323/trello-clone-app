@import 'mixins.styl'

body, html
  background: colors.app.bg

nav.app-layout
  padding: 5px
  background: colors.appNav.bg
  .logo-white.dashboard
    height: 1.2em
    opacity: 0.5
    display: block
    position: absolute
    left: 50%
    top: 8px
    margin-left: -38px
    transition: opacity 0.2s ease-in
    img
      height: 100%
    &:hover
      opacity: 0.8
  .header-box
    height: 30px
    background: colors.appNav.header.bg
    border-radius: 3px
    vertical-align: middle


main.app
  color: colors.app.text