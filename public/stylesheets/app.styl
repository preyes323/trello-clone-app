@import 'mixins.styl'

body, html
  background: colors.app.bg

nav.app-layout
  padding: 5px
  background: colors.appNav.bg
  img, span
    vertical-align: middle
  span
    font-size: 14px
    font-weight: 700
  .logo-white.dashboard
    height: 1.2em
    opacity: 0.5
    display: block
    position: absolute
    left: 50%
    top: 8px
    margin-left: -38px
    transition: opacity 0.2s ease-in
    img
      height: 100%
    &:hover
      opacity: 0.8
  .logo-white.icon
    display: inline-block
    height: 30px
    width: 30px
    text-indent: 9999px
    background: transparent url('/images/logo.png') 0 5px no-repeat
    background-size: 20px
    margin-right: 2px
  .header-box
    height: 30px
    background: colors.appNav.header.bg
    border-radius: 3px
    box-sizing: border-box
    vertical-align: middle
    &:hover
      background: colors.appNav.header.bgLight
  .header-boards
    padding: 0 5px
  .header-search.header-box
    position: relative
    margin-left: 5px
    input
      height: 30px
      position: relative
      width: 150px
      padding: 0 30px 0 8px
      margin: 0
      font-size: 13px
      opacity: 0
      border: none
      border-radius: 3px
      z-index: 1
      transition: width 0.2s ease-in
      &.focus
        opacity: 1
        outline: none
        width: 318px
        padding-right: 54px
        & ~ .hide
          display: inline-block
        & ~ .icon-search
          display: none
    span, a
      font-size: 14px
      color: colors.appNav.header.text
      position: absolute
      z-index: 2
      cursor: pointer
      &.icon-search
        top: 0
        right: 0
      &.icon-close
        top: 0
        right: 0
        color: colors.appNav.header.darkText
        &:hover
          color: darken(colors.appNav.header.darkText, 50)
      &.icon-external-link
        top: 0
        right: 24px
        color: colors.appNav.header.darkText
        &:hover
          color: darken(colors.appNav.header.darkText, 50)
  .header-user
    margin: 0 3px
    span
      padding: 0 8px
    img
      border-top-left-radius: 3px
      border-bottom-left-radius: 3px
  .header-icon
    color: colors.appNav.header.text
    font-size: 16px
    margin: 0 3px

.hide
  display: none

main.app
  width: 86%
  min-width: 960px
  margin: 40px auto 0 auto
  color: colors.app.text
  header
    .boards-section-header
      font-size: 1pc
      font-weight: 700
    span, .boards-section-header
      display: inline-block
      vertical-align: middle
    span
      margin-right: 8px
  li
    display: inline-block
    width: 24.25%
    height: 95px
    margin-right: 1%
    margin-bottom: 1%
    border-radius: 3px
    vertical-align: top
    a
      height: 100%
      width: 100%
      display: block
      font-size: 1pc
      font-weight: 700
      box-sizing: border-box
      padding: 10px 12px
    &:nth-of-type(4n)
      margin-right: 0
    &.board
      background: colors.app.boardCard.bg
      a
        color: colors.app.boardCard.text
      &:hover
        background: darken(colors.app.boardCard.bg, 5)
    &.new-board
      background: colors.app.boardCard.bgNew
      a
        color: colors.app.boardCard.textNew
        text-align: center
        padding-top: 37px
      &:hover
        background: darken(colors.app.boardCard.bgNew, 5)