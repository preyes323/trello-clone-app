<div class="lists-container">
  <ul id="lists">
    {{#each lists}}
      <li class="list" data-pos="{{listPos}}" data-id="{{id}}">
        <header class="clearfix">
          <input class="list-name" value="{{title}}">
          <span class="icon-sm icon-close list-menu"></span>
        </header>
        <ul class="cards" data-id="{{id}}">
          {{#each cards}}
            <li class="card" data-pos="{{cardPos}}" data-id="{{id}}">
              {{title}}
              <span class="icon-sm icon-close"></span>
            </li>
          {{/each}}
        </ul>
        <p>Add a card...</p>
      </li>
    {{/each}}
  </ul>
</div>