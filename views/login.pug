extends layout

append header

block content
  form(id="login" method="post")
    h1 Log Into Your Account

    if error
      p ERROR: #{error}
      p.
        No account yet? #[a(href="/users/register") Sign Up]

    input(type="hidden", name="_csrf", value=csrfToken)

    dl
      dt: span Email:
      dd: input(type="email", name="email", required=true)

      br

      dt: span Password:
      dd: input(type="password", name="password", required=true)

    input(type="submit" class="btn btn-primary")
